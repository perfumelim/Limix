generator client {
  provider = "prisma-client-js"
}

datasource db {
//  provider = "postgresql"
//  url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  passwordHash String
  createdAt DateTime @default(now())

  Item Item[]
}

model Item {
  id Int @id @default(autoincrement())
  title String
  description String
 user User @relation(fields: [userId], references: [id])
  userId Int
}